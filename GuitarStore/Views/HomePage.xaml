                Clicked="OnAmpsClicked"
                WidthRequest="450" 
                BackgroundColor="CornflowerBlue" 
                FontSize="20"/>
        <Button Text="Pedals" 
                Clicked="OnPedalsClicked" 
                WidthRequest="450" 
                BackgroundColor="CornflowerBlue" 
                FontSize="20"/>
        <Button Text="Accessories" 
                Clicked="OnAccessoriesClicked" 
                WidthRequest="450" 
                BackgroundColor="CornflowerBlue" 
                FontSize="20"/>
