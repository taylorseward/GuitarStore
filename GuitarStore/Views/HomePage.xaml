                BackgroundColor="CornflowerBlue" 
                FontSize="20"/>
        <Button Text="Guitars" 
                Clicked="OnGuitarsClicked" 
                WidthRequest="450" 
                BackgroundColor="CornflowerBlue" 
                FontSize="20"/>
